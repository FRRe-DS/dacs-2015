<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="ar.edu.utn.frre.cs.web.struts2" extends="struts-default">
		<action name="HelloWorldAction" class="ar.edu.utn.frre.cs.web.struts2.HelloWorld">
			<result>/jsp/HelloWorld.jsp</result>
		</action>
		<action name="welcome-user" class="ar.edu.utn.frre.cs.web.struts2.WelcomeUser">
			<result>/jsp/welcome-user.jsp</result>
		</action>
		
		<action name="create-cliente" class="ar.edu.utn.frre.cs.web.struts2.ClienteAction">
			<result name="SUCCESS">/jsp/welcome-user.jsp</result>
			<result name="ERROR">/jsp/user-error.jsp</result>
		</action>
	</package>
</struts>